<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9"
    android:orientation="horizontal"
    android:gravity="center"
    android:baselineAligned="false">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:weightSum="9"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/winder_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="9"
            android:orientation="vertical">
            <!--   Start of winder stuff-->
            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ToggleButton
                            android:id="@+id/controlLineRts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48sp"
                            android:textOff="RTS"
                            android:textOn="RTS" />

                        <ToggleButton
                            android:id="@+id/controlLineCts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48sp"
                            android:clickable="false"
                            android:textColor="@android:color/secondary_text_dark"
                            android:textOff="CTS"
                            android:textOn="CTS" />

                        <View
                            android:layout_height="match_parent"
                            android:layout_width="6dp" />

                        <ToggleButton
                            android:id="@+id/controlLineDtr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48sp"
                            android:textOff="DTR"
                            android:textOn="DTR" />

                        <ToggleButton
                            android:id="@+id/controlLineDsr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:minWidth="48sp"
                            android:textColor="@android:color/secondary_text_dark"
                            android:textOff="DSR"
                            android:textOn="DSR" />

                        <View
                            android:layout_height="match_parent"
                            android:layout_width="6dp" />

                        <ToggleButton
                            android:id="@+id/controlLineCd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:minWidth="48sp"
                            android:textColor="@android:color/secondary_text_dark"
                            android:textOff="CD"
                            android:textOn="CD" />

                        <ToggleButton
                            android:id="@+id/controlLineRi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48sp"
                            android:clickable="false"
                            android:textColor="@android:color/secondary_text_dark"
                            android:textOff="RI"
                            android:textOn="RI" />

                        <View
                            android:layout_width="match_parent"
                            android:background="?android:attr/listDivider"
                            android:layout_height="2dp" />


                    </LinearLayout>



                    <TextView
                        android:id="@+id/winder_state"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text='@string/winder_state'
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <LinearLayout
                        android:id="@+id/winder_controls_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <TextView
                            android:id="@+id/wind_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text='@string/wind_count'
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        <Button
                            android:id="@+id/start_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start" />

                        <Button
                            android:id="@+id/pause_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pause/Continue" />

                        <Button
                            android:id="@+id/reset_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reset"
                            tools:ignore="TextContrastCheck" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/settings_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:scrollbars="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:background="?android:attr/listDivider"
                            android:layout_height="2dp" />
                        <LinearLayout
                            android:id="@+id/traverse_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/traverse_plus_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="+" />
                            <SeekBar
                                android:id="@+id/traverse_seekBar"
                                android:max="600"
                                android:min="0"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"/>

                            <Button
                                android:id="@+id/traverse_minus_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="-" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/traverse_position"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        <LinearLayout
                            android:id="@+id/machine_settings_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">
                            <Button
                                android:id="@+id/set_winder_face_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Set Winder Face" />
                            <Button
                                android:id="@+id/traverse_to_winder_face_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Move To Winder Face" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight=".66"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Select a a max speed between 0 and 255:"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                                <NumberPicker
                                    android:id="@+id/max_speed_picker"
                                    android:layout_width="0dp"
                                    android:layout_weight=".15"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/set_max_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Set Max Speed" />
                            <TextView
                                android:id="@+id/winder_face"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/winder_face"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                            <TextView
                                android:id="@+id/max_speed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/max_speed"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/wind_settings_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <Button
                                    android:id="@+id/set_left_limit_btn"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Set Left Limit"/>
                                <Button
                                    android:id="@+id/set_right_limit_btn"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Set Right Limit" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight=".66"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:text="Select pitch in mm as steps per hall events"/>

                                <Spinner android:id="@+id/pitch_spinner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <Button
                                android:id="@+id/set_pitch_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Set Pitch" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight=".66"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:text="Select a wind count between 1 and 30000:"/>
                                <NumberPicker
                                    android:id="@+id/wind_count_picker"
                                    android:layout_width="0dp"
                                    android:layout_weight=".15"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/set_wind_count_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Set Wind Count" />
                            <Button
                                android:id="@+id/toggle_direction_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Toggle Direction" />
                            <TextView
                                android:id="@+id/left_limit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                            <TextView
                                android:id="@+id/right_limit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                            <TextView
                                android:id="@+id/traverse_increment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                            <TextView
                                android:id="@+id/hall_events"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                            <TextView
                                android:id="@+id/wind_target"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                            <TextView
                                android:id="@+id/direction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                            <TextView
                                android:id="@+id/turns_per_layer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/settings_done_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Done" />

                    </LinearLayout>

                </LinearLayout>



            </ScrollView>
            <!--   end of winder stuff-->

        </LinearLayout>
        <!--   start of console stuff-->

        <LinearLayout
            android:id="@+id/console_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:background="?android:attr/listDivider"
                android:layout_height="2dp" />
            <TextView
                android:id="@+id/receive_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:freezesText="true"
                android:scrollbars="vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:typeface="monospace" />

            <Button
                android:id="@+id/receive_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read" />

            <View
                android:layout_width="match_parent"
                android:background="?android:attr/listDivider"
                android:layout_height="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/send_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="text|textNoSuggestions"
                    android:singleLine="true" />

                <ImageButton
                    android:id="@+id/send_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_send_white_24dp"
                    android:contentDescription="TODO" />
            </LinearLayout>
        </LinearLayout>
        <!--   end of console stuff-->

    </LinearLayout>

</LinearLayout>


